<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_tiny"
    android:background="@drawable/report_item_back"
    android:orientation="vertical"
    android:padding="@dimen/margin_tiny">

    <TextView
        android:id="@+id/tv_frag_teamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/med_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_frag_teamDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_tiny"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/tv_frag_team_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_tiny"
            android:background="@drawable/close_layer"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/tv_frag_team_shift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/tv_frag_teamDate" />

</LinearLayout>